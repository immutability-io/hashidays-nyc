PACKAGE_NAME = consul
PACKAGE_ARCH = amd64
PACKAGE_MAINTAINER = Cypherhat <ops@immutability.io>
PACKAGE_VENDOR = HashiCorp
PACKAGE_DESCRIPTION = Service Discovery and Fault Checking
PACKAGE_SECTION = net
PACKAGE_HOMEPAGE = https://www.consul.io
PACKAGE_DEP_FLAGS = --depends 'curl >= 7.47.0'

CONSUL_VERSION = 0.8.3
CONSUL_SHA256 = f894383eee730fcb2c5936748cc019d83b220321efd0e790dae9a3266f5d443a

CONSUL_URL = https://releases.hashicorp.com/consul/$(CONSUL_VERSION)/consul_$(CONSUL_VERSION)_linux_$(PACKAGE_ARCH).zip

SOURCE_DIR = $(CURDIR)/sources
BUILD_DIR = $(CURDIR)/deb-pkg
TARGET_DIR = $(CURDIR)/../packages

default: help

pkg: $(TARGET_DIR)/$(PACKAGE_NAME)-$(CONSUL_VERSION)-$(PACKAGE_ARCH).deb ## Build package

$(TARGET_DIR)/$(PACKAGE_NAME)-$(CONSUL_VERSION)-$(PACKAGE_ARCH).deb: layout
	mkdir -p $(TARGET_DIR)
	fpm -t deb -s dir \
		-C "$(BUILD_DIR)" \
		-p "$(TARGET_DIR)" \
		-n "$(PACKAGE_NAME)" \
		-v "$(CONSUL_VERSION)" \
		-a "$(PACKAGE_ARCH)" \
		--after-install ./scripts/postinst \
		--after-remove ./scripts/postrm \
		--before-install ./scripts/preinst \
		--before-remove ./scripts/prerm \
		--category "$(PACKAGE_SECTION)" \
		--config-files=/etc \
		--deb-no-default-config-files \
		--deb-user root \
		--deb-group root \
		--description "$(PACKAGE_DESCRIPTION)" \
		--maintainer "$(PACKAGE_MAINTAINER)" \
		--url "$(PACKAGE_HOMEPAGE)" \
		--vendor "$(PACKAGE_VENDOR)" \
		$(PACKAGE_DEP_FLAGS) \
		.

$(SOURCE_DIR)/consul.zip:
	mkdir -p $(SOURCE_DIR)
	wget -O $(SOURCE_DIR)/consul.zip $(CONSUL_URL)

.PHONY: layout
layout: $(SOURCE_DIR)/consul.zip ## Lay out the package image structure
	@if [ "$(shell shasum --algorithm 256 $(SOURCE_DIR)/consul.zip | cut -d ' ' -f 1)" != "$(CONSUL_SHA256)" ]; then \
		echo "SHA256 of consul.zip is not $(CONSUL_SHA256)" && exit 1; \
		fi
	cd $(SOURCE_DIR) && unzip -u $(SOURCE_DIR)/consul.zip
	# Main Consul directory
	mkdir -p $(BUILD_DIR)/usr/local/bin
	cp -r $(SOURCE_DIR)/consul $(BUILD_DIR)/usr/local/bin

.PHONY: clean
clean: ## Clean sources excluding downloaded sources
	rm -rf $(CURDIR)/target
	git clean -xdf $(BUILD_DIR)

clean-all: ## Clean sources including downloaded sources
	rm -rf $(CURDIR)/target
	git clean -xdf $(BUILD_DIR)
	git clean -xdf $(SOURCE_DIR)

.PHONY: help
help:
	@echo "Valid targets:"
	@grep -E '^[a-zA-Z_-]+%*:.*?## .*$$' $(MAKEFILE_LIST) | sort | awk 'BEGIN {FS = ":.*?## "}; {printf "\033[36m%-15s\033[0m %s\n", $$1, $$2}'
